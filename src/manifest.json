{
  "name": "leetcode assistant",
  "version": "1.0",
  "manifest_version": 3, 
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_title": "leetcode assistant",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "css": [
        "index.css"
      ],
      "run_at": "document_idle",
      "matches": [
        "*://*.leetcode.com/*",
        "*://*.leetcode-cn.com/*"
      ],
      "all_frames": false
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "js/content.js",
    "js/vendor.js",
    "js/inject.js",
    "audit.css",
    "index.css"
  ]
}